{
  "name": "html-converter-cdt",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "pnpm@10.14.0+sha512.ad27a79641b49c3e481a16a805baa71817a04bbe06a38d17e60e2eaee83f6a146c6a688125f5792e48dd5ba30e7da52a5cda4c3992b9ccf333f9ce223af84748",
  "description": "A TypeScript utility library to convert HTML to several formats with CDT(Chrome DevTools Protocol), including mhtml, PDF, docx, and more.",
  "author": "Robin Min",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/robinmin/html-converter-cdt"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "dist/index.cjs",
  "bin": {
    "html-converter-cdt": "dist/cli/index.cjs"
  },
  "files": [
    "!src/**/*.test.*",
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "lint": "eslint --fix .",
    "prepare": "husky",
    "prepublishOnly": "pnpm build",
    "test": "vitest run --no-coverage",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:smoke": "playwright test tests/e2e/main.e2e.test.ts",
    "test:e2e:integration": "playwright test tests/e2e/integration/",
    "test:e2e:cli": "playwright test tests/e2e/cli/",
    "test:e2e:report": "playwright show-report",
    "test:e2e:install": "playwright install",
    "test:all": "pnpm test:unit && pnpm test:e2e",
    "test:visual": "playwright test --project=visual-tests",
    "test:visual:update": "UPDATE_BASELINE=true pnpm test:visual",
    "test:performance": "playwright test --project=performance-tests",
    "test:performance:report": "node tests/performance/utils/generate-report.js",
    "test:comprehensive": "pnpm test:unit && pnpm test:e2e && pnpm test:visual && pnpm test:performance",
    "test:accessibility": "node scripts/test-accessibility.cjs",
    "test:accessibility:critical": "node scripts/test-accessibility.cjs --critical",
    "test:accessibility:verbose": "node scripts/test-accessibility.cjs --verbose",
    "test:accessibility:junit": "node scripts/test-accessibility.cjs --junit",
    "test:accessibility:ci": "node scripts/test-accessibility.cjs --junit"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "chrome-launcher": "^1.2.1",
    "chrome-remote-interface": "^0.33.3",
    "commander": "^14.0.1",
    "ora": "^5.4.1",
    "uuid": "^13.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@axe-core/cli": "^4.10.2",
    "@changesets/cli": "^2.29.7",
    "@ilyasemenov/eslint-config": "^1.4.2",
    "@playwright/test": "^1.56.0",
    "@types/chrome-remote-interface": "^0.31.14",
    "@types/jsdom": "^27.0.0",
    "@types/uuid": "^11.0.0",
    "axe-core": "^4.11.0",
    "eslint": "^9.38.0",
    "eslint-plugin-unicorn": "^61.0.2",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.2.4",
    "playwright": "^1.56.0",
    "tsconfig-vite-node": "^1.2.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
